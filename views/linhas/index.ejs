<%- include("../partials/header") %>

<h1>Linhas</h1>
<p><a href="/linhas/create">Nova linha</a></p>
<table class="table table-sm table-striped table-hover table-bordered">
  <tr>
  <th>Código</th>
    <th>Número</th>
    <th>Operadora</th>
    <th>DDD</th>
    <th>Ações</th>
  </tr>
  <% linhas.map( linhas => { %>
  <tr>
  <td><%= linhas.idlinhas %></td>
    <td><%= linhas.numero %></td>
    <td><%= linhas.operadora %></td>
    <td><%= linhas.DDD %></td>
    <td>
      <div class="btn-group" role="group" aria-label="...">
        <a type="button" class="btn btn-primary" href="/linhas/update/<%= linhas.idlinhas %>">Editar</a>
        <a type="button" class="btn btn-danger"
         href="/linhas/delete/<%= linhas.idlinhas %>"
         onclick="return confirm('Deseja excluir?')" >Excluir</a>
      </div>

    </td>
  </tr>
    <% }) %>
</table>

<%- include ("../partials/footer") %>
<%- include("../partials/header") %>
<link href= "/public/assets/styles.css" rel="stylesheet" type="text/css" />

<h1>Funcionários</h1>
<p><a href="/funcionarios/create">Novo funcionário</a></p>
<table class="table table-striped table-hover table-bordered">
  <tr>
  <th >Código</th>
    <th >Nome</th>
    <th >CPF</th>
    <th >Matricula</th>
    <th >Função</th>
    <th >Ações</th>
  </tr>
  <% funcionarios.map( funcionarios => { %>
  <tr>
  <td><%= funcionarios.idfuncionarios %></td>
    <td><%= funcionarios.nome %></td>
    <td><%= funcionarios.CPF %></td>
    <td><%= funcionarios.matricula %></td>
    <td><%= funcionarios.funcao %></td>
    <td>
      <div class="btn-group" role="group" aria-label="...">
        <a type="button" class="btn btn-primary" href="/funcionarios/update/<%= funcionarios.idfuncionarios %>">Editar</a>
        <a type="button" class="btn btn-danger"
         href="/funcionarios/delete/<%= funcionarios.idfuncionarios %>"
         onclick="return confirm('Deseja excluir?')" >Excluir</a>
      </div>

    </td>
  </tr>
    <% }) %>
</table>

<%- include ("../partials/footer") %>
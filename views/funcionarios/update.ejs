<%- include("../partials/header") %>

<h1>Editar Funcionário</h1>
<p><a href="/funcionarios">Voltar a lista de funcionários</a></p>

<form method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" value="<%= funcionario.nome %>">
  </div>
  <div class="form-group">
    <label for="cpf">CPF</label>
    <input type="text" class="form-control" id="cpf" name="cpf" placeholder="CPF" value="<%= funcionario.CPF %>">
  </div>
  <div class="form-group">
    <label for="matricula">Matricula</label>
    <input type="number" class="form-control" id="matricula" name="matricula" placeholder="Matricula" value="<%= funcionario.matricula %>">
  </div>
  <div class="form-group">
    <label for="funcao">Função</label>
    <input type="text" class="form-control" id="funcao" name="funcao" placeholder="Função" value="<%= funcionario.funcao %>">
  </div>
 
  <button type="submit" class="btn btn-success">Salvar</button>
</form>

<%- include ("../partials/footer") %>